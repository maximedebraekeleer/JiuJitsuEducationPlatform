@model Taijitan_Yoshin_Ryu_vzw.Models.SessieViewModels.SessieViewModel

@{
    ViewData["Title"] = "Sessie";
}

<div class="content-wrapper">
    <div class="sessie-wrapper">

        <div class="sessie-content">
            <h3>Aanwezigheden - @Model.Sessie.BeginDatumEnTijd.ToString("dd/MM/yyyy HH:mm")</h3>

            <ul class="ledenlijst">
                @foreach (var item in Model.Leden) {

                    if (Model.AanwezigeLeden.Contains(item)) {
                        <li class="ledenlijstLid aanwezig">
                            <a asp-controller="Sessie" asp-action="RegistreerAanwezigheid" asp-route-username="@item.Username">@item.Voornaam @item.Naam</a>
                        </li>
                    }
                    else {
                        <li class="ledenlijstLid">
                            <a asp-controller="Sessie" asp-action="RegistreerAanwezigheid" asp-route-username="@item.Username">@item.Voornaam @item.Naam</a>
                        </li>
                    }
                }
            </ul>
            <div class="buttonPanel">
                <form asp-action="Cancel" >
                    <button>Cancel</button>
                </form>
                <button>Lid toevoegen</button>
                <form asp-controller="Gebruiker">
                    <button>Bevestigen</button>
                </form>
            </div>
        </div>


    </div>
</div>
<script>
    var leden = document.getElementsByClassName("ledenlijstLid");

    for (var i = 0; i < leden.length; i++) {
        leden[i].addEventListener('click', (e) => {
            if (e.target.classList.contains('aanwezig')) {
                e.target.classList.remove('aanwezig');
            } else
                e.target.classList.add('aanwezig');
        });
    }
</script>
